<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%=csrfToken%>">
    <title>To-Do Manager</title>
    <link rel="stylesheet" href="./css/styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

        function updateTodo(id){
            fetch(`/todos/${id}/markASCompleted`,{
                method:"put",
                headers:{"Content-Type": "application/json"},
                body: JSON.stringify({
                    "_csrf": token
                }) 
            })
            .then((res)=>{
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err)=>{
                console.log(err)
            })
        }
        function deleteTodo(id){
            fetch(`/todos/${id}`,{
                method:"delete",
                headers:{"Content-Type": "application/json"},
                body: JSON.stringify({
                    "_csrf": token
                }) 
            })
            .then((res)=>{
                if(res.ok){
                    window.location.reload();
                }
            })
            .catch((err)=>{
                console.log(err)
            })
        }
    </script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include("header.ejs") %>
            <form action="/todos" method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <div class="flex gap-2 py-4">
                    <div class="flex-auto">
                        <input type="text" name="title" id="" placeholder="What's new?" required
                        class="border border-grey-300 rounded text-grey text-sm p-2">
                    </div>
                    <div class="flex-auto">
                        <input type="date" name="dueDate" id="" required
                        class="border border-grey-300 rounded text-grey text-sm p-2 leading-4">
                    </div>
                    <div class="flex-none">
                        <button type="submit"
                        class="bg-green-600 px-5 py-1.5 text-white rounded font-medium mr-2 mb-2">Add</button>
                    </div>
                </div>
            </form>
            <div>
                <!-- overdues -->
                <h5>Overdue</h5>
                <%var todos=overDue %>
                <%-include("todos.ejs",{todos:todos,countType:"count-overdue"}) %>


                <!-- due today -->
                <h5>Due Today</h5>
                <%var todos=dueToday %>
                <%-include("todos.ejs",{todos:todos,countType:"count-due-today"}) %>


                <!-- due later -->
                <h5>Due Later</h5>
                <%var todos=dueLater %>
                <%-include("todos.ejs",{todos:todos,countType:"count-due-later"}) %>
            </div>
        </div>
    </div>
    
    
    <%- include("footer.ejs") %>
    
</body>
</html>