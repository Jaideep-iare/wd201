<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="csrf-token" content="<%=csrfToken%>">
        <title><%= title %></title>
        <link rel="stylesheet" href="./css/styles.css">
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <div class="grid grid-cols-6">
            <div class="col-start-3 col-span-2">
                <%- include("header.ejs") %>
                <h6 class="py-4">Signup as a new user</h6>
                <form action="/users" method="post">
                    <input type="hidden" name="_csrf" value="<%=csrfToken %>">
                    <div class="py-3">
                        <label for="firstName">First Name:</label>
                        <input type="text" name="firstName" id="" class="border border-grey-300 text-grey-900 rounded p-2 w-full">
                    </div>
                    

                    <div class="py-3">
                        <label for="lastName">Last Name:</label>
                        <input type="text" name="lastName" id="" class="border border-grey-300 text-grey-900 rounded p-2 w-full">
                    </div>
                    

                    <div class="py-3">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="" class="border border-grey-300 text-grey-900 rounded p-2 w-full">
                    </div>
                    

                    <div class="py-3">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="" class="border border-grey-300 text-grey-900 rounded p-2 w-full">
                    </div>

                    <div class="py-3"></div>
                        <button type="submit" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>